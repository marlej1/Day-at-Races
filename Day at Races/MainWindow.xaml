        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"  ></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="0.5">
